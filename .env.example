# WebSocket Configuration for Real-time Log Streaming
# Copy this file to .env and configure your WebSocket server URL

# WebSocket server URL for receiving real-time logs
# Examples:
# - Local development: ws://localhost:8080/ws
# - Production: wss://your-websocket-server.com/logs
# - Azion Edge: wss://your-edge-function.azion.app/ws
REACT_APP_WEBSOCKET_URL=ws://localhost:8080/ws

# Enable/disable WebSocket by default (true/false)
REACT_APP_ENABLE_WEBSOCKET=true

# WebSocket reconnection settings
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10
